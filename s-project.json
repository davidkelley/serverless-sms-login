{
  "name": "sms-login",
  "custom": {
    "meta": {
      "name": "${meta_bucket}",
      "region": "${meta_bucket_region}"
    },
    "client": {
      "bucketName": "sms.${stage}.${region}"
    },
    "cors": {
      "allowOrigin": "*",
      "allowHeaders": [
        "Content-Type",
        "X-Amz-Date",
        "Authorization",
        "X-Api-Key"
      ]
    }
  },
  "plugins": [
    "serverless-meta-sync",
    "serverless-cors-plugin",
    "serverless-client-s3",
    "serverless-offline",
    "./plugins/setupdb.js"
  ]
}
